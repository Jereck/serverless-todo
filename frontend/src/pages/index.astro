---
import "../styles/global.css";
import '../lib/awsConfig';
import AuthGate from "../components/AuthGate.vue";
import RootLayout from "../layouts/RootLayout.astro";
---
<RootLayout>
	<div class="flex flex-col items-center min-h-screen bg-gray-100">
		<div class="flex flex-col items-center justify-center w-full max-w-4xl p-6 mx-auto bg-white rounded-lg shadow-md">
			<h1 class="text-3xl font-bold">Serverless Todo App</h1>
			<p class="mt-2 text-gray-600">
				A simple serverless todo app using AWS Lambda and DynamoDB
			</p>
		</div>

		<!-- 🔁 Auth-gated UI handled inside Vue -->
		<AuthGate client:only="vue" />
	</div>
</RootLayout>
